
<% @events.each do |event|%>
  <section class="event">
    <div class="row">
      <div class="col-3 image">
        <%= image_tag event.image_file_name%>
      </div>
      <div class="col-9 summery">
      <h2><%= link_to event.name, event_path(event)%></h2>
      <h3><%= day_and_time(event)%> in <%= event.location %></h3>
      
      <span class="price">
        <%= price(event)%>
      </span>
      
      <p>
        <%= truncate(event.description, length: 40, separator: ' ')%>
      </p>
      </div>
    </div>
  </section>
<%end%>
<% if current_user_admin? %>
<section class="admin">
  <%= link_to "Add New Event", new_event_path, class: "btn btn-primary"%>
</section>
<% end %>

















